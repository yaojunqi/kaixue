<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".kotlin.basic1.BasicOneActivity">
    <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/tvHomework"
            android:text="HomeWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ImageView android:id="@+id/imgLaunch"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tvHomework"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@mipmap/ic_launcher" android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>